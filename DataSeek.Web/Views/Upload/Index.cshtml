@{
    ViewData["Title"] = "Upload Soulseek Log";
}

<h2>Upload Soulseek Log</h2>

<form asp-controller="Upload" asp-action="Upload" enctype="multipart/form-data" method="post">
    <div>
        <label for="file">Choose log file:</label>
        <input type="file" name="file" />
    </div>
    <button type="submit">Upload</button>
</form>

@if (!ViewData.ModelState.IsValid)
{
    <div>
        <ul>
            @foreach (var error in ViewData.ModelState["File"]?.Errors)
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}